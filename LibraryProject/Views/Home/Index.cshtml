<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Book Store Template, Free CSS Template, CSS Website Layout</title>
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <link href="~/css/templatemo_style.css" rel="stylesheet" type="text/css" />
    <style>
        .footer {
            width: 100%;
            height: 50px;
            text-align: center;
            position: relative;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 10px;
            clear: both;
            margin-top: auto;
        }

        .carousel {
            width: 80%; 
            margin: auto; 
        }

        .carousel-item img {
            height: 400px; 
            object-fit: cover; 
        }

        .templatemo_content_left_section {
            margin-top: 20px;
            margin-bottom: 20px;
        }
        .templatemo_content_right_section {
            padding-left: 20px;
        }
        .container {
            max-width: 100%;
        }

        .category-list {
            max-height: 210px;
            overflow-y: auto;
        }
        .col-md-12 {
            left: 25%;
            max-width : 50%;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/images/b1.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/b2.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/b3.jpg" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div> 
        
        @* Search Box *@
        <div class="row">
            <div class="col-md-12">
                <partial name="_BooksSearchPartial" />
            </div>
        </div>
        @* Search Box *@

       
        <div class="row">
            <div class="col-lg-4">
                <div class="templatemo_content_left_section" style="background-color: #4b4743; color: #000;">
                    <h1>Categories</h1>
                    <div class="category-list">
                        <ul class="list-group">
                            @foreach (var category in ViewBag.Categories)
                            {
                                <li class="list-group-item" style="background-color: #4b4743;">
                                    <a href="@Url.Action("BooksByCategory", "Home", new { categoryId = category.Id })" style="color: #000;">@category.Name</a>
                                </li>
                            }
                        </ul>

                    </div>
                </div>

            <div class="col-lg-4">
                <div class="templatemo_content_left_section" style="background-color: #4b4743; color: #000;">
                    <h1>Bestsellers</h1>
                    <div class="category-list">
                        <li class="list-group-item" style="background-color: #4b4743;">
                            <a href="#" style="color: #000;">Book 1</a>
                        </li>
                        <li class="list-group-item" style="background-color: #4b4743;">
                            <a href="#" style="color: #000;">Book 2</a>
                        </li>
                        <li class="list-group-item" style="background-color: #4b4743;">
                            <a href="#" style="color: #000;">Book 3</a>
                        </li>
                    </div>
                </div>
            </div>
            </div

             <div class="col-lg-4">
    <div class="templatemo_content_left_section" style="color: #000;">
        <h1>Books Available</h1>
        <div class="row">
            @foreach (var book in Model)
            {
                <div class="col-4">
                    <img src="@Url.Content(book.ImagePath)" alt="@book.Title" style="margin-bottom: 20px;">
                </div>
            }
        </div>
    </div>
</div>

        </div>

        <div class="row">
            <div class="col-lg-12" style="color:black">
                <h1>Orders</h1>
                <table class="table table-bordered" style="color:black">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Customer Name</th>
                            <th>Order Date</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <footer class="border-top footer text-muted">
        <img src="images/templatemo_ads.jpg" alt="Advertisement" style="margin-bottom: 20px">
        <div>
            <a href="subpage.html">Search</a> | <a href="subpage.html">Books</a> | <a href="#">FAQs</a> | <a href="#">Contact Us</a>
            Copyright © 2024 <a href="#"><strong>Library</strong></a> &copy; 2024 - LibraryProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
