@model Book

@{
    ViewData["Title"] = "Details";
}
<div class="container mt-4">

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Book Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 text-muted">ID:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

                <dt class="col-sm-3 text-muted">Title:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-3 text-muted">Descripion:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3 text-muted">ISBN:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ISBN)</dd>

                <dt class="col-sm-3 text-muted">Created:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Created)</dd>

                <dt class="col-sm-3 text-muted">Updated:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Updated)</dd>

                <dt class="col-sm-3 text-muted">Category:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.Name)</dd>

                <dt class="col-sm-3 text-muted">Book:</dt>
                <dd class="col-sm-9">
                    <img src="@Url.Content(Model.ImagePath)" alt="Book Image" class="img-thumbnail" />
                </dd>
            </dl>
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
            </div>
        </div>
    </div>
</div>